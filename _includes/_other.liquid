<article class="c__content">
  <header>
    <img src="{{title.image}}" alt="" />
  </header>
  <div class="c__content--body">
    <a href="{{title.link}}" class="c__content--title" data-tt="{{title.title}}"
      >{{title.title}}</a
    >
    <p class="c__content--authors">{{title.authors}}</p>
    <p class="c__content--description">{{title.description}}</p>
  </div>
  <footer>
    <a href="{{title.link}}" class="c__content--btn"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-link"
        viewBox="0 0 16 16"
      >
        <path
          d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9c-.086 0-.17.01-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z"
        />
        <path
          d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4.02 4.02 0 0 1-.82 1H12a3 3 0 1 0 0-6H9z"
        /></svg
      >View</a
    >
    {% include _submitter %}
  </footer>
</article>
